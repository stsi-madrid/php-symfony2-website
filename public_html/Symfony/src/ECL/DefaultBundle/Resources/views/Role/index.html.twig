{% extends 'ECLDefaultBundle::base_backoffice.html.twig' %}
{% block title %}S.T.S.I. Backoffice | Roles{% endblock %}
{% block body_backoffice %}
<article id="list">
    <nav id="nav">
        <ul>
            <li><a href="{{url('ECLHomeBundle_backoffice')}}">Backoffice</a></li>
            <li>></li>
            <li><strong>Roles</strong></li>
        </ul>
    </nav>
    <h1 id="title">Lista de Roles</h1>
    <a href="{{ url('ECLDefaultBundle_roles_new') }}" class="button">nuevo</a>
    <table>
        <thead>
            <tr>
                <th colspan="3"></th>
                <th>Id</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ url('ECLDefaultBundle_roles_show', { 'id': entity.id }) }}">ver</a></td>
                <td><a href="{{ url('ECLDefaultBundle_roles_edit', { 'id': entity.id }) }}">editar</a></td>
                <td><a href="{{ url('ECLDefaultBundle_roles_delete', { 'id': entity.id }) }}">borrar</a></td>
                <td><a href="{{ url('ECLDefaultBundle_roles_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}