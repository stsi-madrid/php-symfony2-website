{% extends 'ECLDefaultBundle::base_backoffice.html.twig' %}
{% block title %}S.T.S.I. Backoffice | Roles | {{ entity.name }}{% endblock %}
{% block body_backoffice %}
<article id="data">
    <nav id="nav">
        <ul>
            <li><a href="{{url('ECLHomeBundle_backoffice')}}">Backoffice</a></li>
            <li>></li>
            <li><a href="{{url('ECLDefaultBundle_roles')}}">Roles</a></li>
            <li>></li>        
            <li><strong>{{ entity.name }}</strong></li>
        </ul>
    </nav>
    <h1 id="title">Rol: {{ entity.name }}</h1>
